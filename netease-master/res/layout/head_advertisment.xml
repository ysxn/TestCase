<?xml version="1.0" encoding="utf-8"?>
<netease.cheng.widgets.HeadGallery
	android:id="@+id/head_advert_grally" 
	android:layout_width="fill_parent"
	android:layout_height="wrap_content" 
	xmlns:android="http://schemas.android.com/apk/res/android">
	<netease.cheng.widgets.MyGallery
		android:id="@+id/head_mygallery" 
		android:layout_width="fill_parent"
		android:layout_height="wrap_content" 
		xmlns:android="http://schemas.android.com/apk/res/android" />
	<RelativeLayout 
		android:layout_gravity="bottom"
		android:id="@+id/top_bottom_space" 
		android:background="@drawable/top_text_background"
		android:paddingLeft="7.0dip" android:paddingTop="3.0dip"
		android:paddingRight="7.0dip" android:paddingBottom="3.0dip"
		android:layout_width="fill_parent" android:layout_height="wrap_content">
		<TextView android:textSize="10.0sp" android:gravity="center"
			android:id="@+id/head_text_tag" android:paddingLeft="8.0px"
			android:paddingTop="4.0px" android:paddingRight="8.0px"
			android:paddingBottom="2.0px" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:singleLine="true"
			android:layout_alignParentLeft="true" android:layout_centerVertical="true" />
		<TextView android:textSize="15.0dip" android:textColor="@color/top_text_color"
			android:gravity="left|center" android:id="@+id/head_text_title"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:singleLine="true" 
			android:layout_toRightOf="@id/head_text_tag"
			android:layout_centerVertical="true" />
	</RelativeLayout>
</netease.cheng.widgets.HeadGallery>
