<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:background="#ffffffff"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
  <RelativeLayout
  android:id="@+id/vote_item_rela"
  android:layout_width="fill_parent"
  android:layout_height="150dip"
  >
  <ImageView
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:scaleType="fitCenter"
  android:background="@drawable/bg2"/>
  <TextView
  android:background="@drawable/top_text_background"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content"
  android:layout_alignParentBottom="true"
  android:gravity="center_vertical"
  android:paddingLeft="5dip"
  android:text="孟加拉沉船事故"
  android:lines="2"/>
  </RelativeLayout>
  <LinearLayout
  android:layout_below="@id/vote_item_rela"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content">
  
  <TextView
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:padding="5dip"
  android:text="=  投票问题"/>
  <TextView
  android:layout_width="fill_parent"
  android:layout_height="wrap_content"
  android:padding="5dip"
  android:text="你如何看待刚刚推出的中国菜官方英译名"/>
  <RelativeLayout
  android:layout_width="fill_parent"
  android:layout_height="wrap_content"
  android:padding="5dip"
  >
  <TextView
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:layout_centerInParent="true"
  android:layout_alignParentLeft="true"
  android:text="你已投票！ 感谢参与"/>
  <TextView
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:layout_alignParentRight="true"
  android:layout_centerVertical="true"
  android:text="2012-03-13"/>
  </RelativeLayout>
  </LinearLayout>
  <Button
  android:id="@+id/vote_btn"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content"
  android:layout_marginLeft="15dip"
  android:layout_marginRight="15dip"
  android:layout_alignParentBottom="true"
  android:text="查看结果"
  />
</RelativeLayout>
