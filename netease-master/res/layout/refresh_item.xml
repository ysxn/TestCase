<?xml version="1.0" encoding="utf-8"?>

  <RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:gravity="center_horizontal"
  android:id="@+id/refresh_item_root"
  android:layout_width="fill_parent"
  android:layout_height="100dip"
  android:paddingBottom="15dip"
  >
  <FrameLayout
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:layout_centerVertical="true"
  android:id="@+id/refresh_frame"
  >
  <ImageView
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:src="@drawable/z_arrow_down"
  android:id="@+id/refresh_imgup"/>
  <ImageView
  android:visibility="gone"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:src="@drawable/z_arrow_up"
  android:id="@+id/refresh_imgdown"/>
  <ProgressBar 
  android:layout_width="wrap_content" 
  android:layout_height="wrap_content" 
  android:visibility="gone"
  android:layout_gravity="center"
  android:id="@+id/refresh_pb"
  style="@style/loadingbar"/>
  </FrameLayout>
  <LinearLayout
  android:layout_centerVertical="true"
  android:layout_toRightOf="@id/refresh_frame"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:orientation="vertical"
  android:paddingLeft="10dip"
  >
  <TextView
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:textSize="18sp"
  android:text="松开可以刷新"
  android:id="@+id/refresh_hint"/>
  <TextView
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:textSize="18sp"
  android:text="一小时前更新"
  android:id="@+id/refresh_time"/>
  </LinearLayout>
  
</RelativeLayout>
