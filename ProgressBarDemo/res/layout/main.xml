<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/determinate_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="@string/determinate_progressBar" />

    <ProgressBar
        android:id="@+id/determinate_progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:progressDrawable="@drawable/progress_horizontal_material"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="1000"
        android:progress="0" />

    <View
        android:layout_width="match_parent"
        android:layout_height="50dip" />

    <TextView
        android:id="@+id/indeterminate_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="@string/indeterminate_progressBar" />

    <ProgressBar
        android:id="@+id/indeterminate_progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminate="true" />
    
    <View
        android:layout_width="match_parent"
        android:layout_height="50dip" />
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="large_circle" />
    
    <ProgressBar android:id="@+id/progress_large"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="normal_circle" />

    <ProgressBar android:id="@android:id/progress"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="small_circle" />
    
    <ProgressBar android:id="@+id/progress_small"
        style="?android:attr/progressBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="small_title_circle" />
    <!-- android:indeterminateDrawable="@drawable/progress_small_material"style="?android:attr/progressBarStyleSmallTitle" -->
    <ProgressBar android:id="@+id/progress_small_title"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <!-- 
    "progressBarStyle">@style/Widget.Material.ProgressBar
    "progressBarStyleSmall">@style/Widget.Material.ProgressBar.Small
    "progressBarStyleSmallTitle">@style/Widget.Material.ProgressBar.Small.Title
    "progressBarStyleLarge">@style/Widget.Material.ProgressBar.Large
     -->

</LinearLayout>