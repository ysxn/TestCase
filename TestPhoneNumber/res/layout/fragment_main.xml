<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.testphonenumber.MainActivity$PlaceholderFragment" >

    <TextView
        android:id="@+id/tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:labelFor="@+id/input"
        android:text="@string/tips"
        android:visibility="gone" />

    <EditText
        android:id="@+id/input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tips"/>

    <Button
        android:id="@+id/fetch_button"
        android:layout_width="50dip"
        android:layout_height="60dip"
        android:layout_below="@id/input"
        android:text="@string/fetch_button" />

    <Button
        android:id="@+id/update_button"
        android:layout_width="100dip"
        android:layout_height="60dip"
        android:layout_below="@id/input"
        android:layout_toRightOf="@id/fetch_button"
        android:text="@string/update_button" />

    <Button
        android:id="@+id/insert_button"
        android:layout_width="100dip"
        android:layout_height="60dip"
        android:layout_below="@id/input"
        android:layout_toRightOf="@id/update_button"
        android:text="@string/insert_button" />
    <Button
        android:id="@+id/delete_button"
        android:layout_width="100dip"
        android:layout_height="60dip"
        android:layout_below="@id/input"
        android:layout_toRightOf="@id/insert_button"
        android:text="@string/delete_button" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/fetch_button" >

        <TextView
            android:id="@+id/check_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            android:text="@string/check_result" />
    </ScrollView>

</RelativeLayout>