<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.testphonenumber.MainActivity$PlaceholderFragment" >

    <TextView
        android:id="@+id/tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:labelFor="@+id/input_phone_number"
        android:text="@string/tips" />

    <EditText
        android:id="@+id/input_phone_number"
        android:layout_width="match_parent"
        android:layout_height="100dip"
        android:layout_below="@id/tips"
        android:inputType="phone" />

    <Button
        android:id="@+id/check_get_button"
        android:layout_width="100dip"
        android:layout_height="60dip"
        android:layout_below="@id/input_phone_number"
        android:text="@string/check_get_button" />

    <Button
        android:id="@+id/check_post_button"
        android:layout_width="100dip"
        android:layout_height="60dip"
        android:layout_below="@id/input_phone_number"
        android:layout_toRightOf="@id/check_get_button"
        android:text="@string/check_post_button" />

    <Button
        android:id="@+id/check_httppost_button"
        android:layout_width="100dip"
        android:layout_height="60dip"
        android:layout_below="@id/input_phone_number"
        android:layout_toRightOf="@id/check_post_button"
        android:text="@string/check_httppost_button" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/check_get_button" >

        <TextView
            android:id="@+id/check_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            android:text="@string/check_result" />
    </ScrollView>

</RelativeLayout>