            <corners android:radius="5.0dip" />
            <gradient android:startColor="#ff000000" android:endColor="#ff000000" android:angle="270.0" android:centerY="0.75" android:centerColor="#ff000000" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="5.0dip" />
                <gradient android:startColor="#ffbcbcbc" android:endColor="#ffffffff" android:angle="270.0" android:centerY="0.5" />
            </shape>
            <shape>
                <corners android:radius="5.0dip" />
                <gradient android:startColor="#ffbcbcbc" android:endColor="#ffffffff" android:angle="270.0" android:centerX="0.5" />
            </shape>
        </clip>
    </item>
