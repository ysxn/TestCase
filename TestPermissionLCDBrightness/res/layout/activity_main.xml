<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/light_sensor_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="left|center_vertical"
                android:text="light_sensor_name" />

            <!-- Divider -->

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="5dip"
                android:layout_marginTop="5dip"
                android:background="@android:color/black" />

            <TextView
                android:id="@+id/light_mode"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="left|center_vertical"
                android:text="light_mode" />
            <!-- Divider -->

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="5dip"
                android:layout_marginTop="5dip"
                android:background="@android:color/black" />

            <TextView
                android:id="@+id/light_data"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="left|center_vertical"
                android:text="light_data" />
            <!-- Divider -->

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="5dip"
                android:layout_marginTop="5dip"
                android:background="@android:color/black" />

        </LinearLayout>

        
        <Button
            android:id="@+id/button_exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:text="EXIT" />
        
        <Button
            android:id="@+id/button_echo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_above="@id/button_exit"
            android:layout_marginBottom="50dip"
            android:text="SET_brightness" />
        
        <EditText 
            android:id="@+id/edittext_echo"
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:layout_alignParentLeft="true"
            android:inputType="number"
            android:maxLength="3"
            android:layout_marginBottom="10dip"
            android:layout_above="@id/button_echo"/>
        
    </RelativeLayout>

</LinearLayout>