<?xml version="1.0" encoding="utf-8"?>
<manifest
	xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.android_04_05_receiver"
	android:versionCode="1" android:versionName="1.0">
	<application android:icon="@drawable/icon"
		android:label="@string/app_name">
		<activity android:name=".android_04_05_receiver"
			android:label="@string/app_name">
			<intent-filter>
				<action
					android:name="android.intent.action.MAIN" />
				<category
					android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>

		<receiver android:name=".time_receiver"
			android:enabled="true">
			<intent-filter>
				<action
					android:name="android.intent.ACTION_TIMEZONE_CHANGED" />
				<action
					android:name="android.intent.ACTION_TIME" />
				<action
					android:name="android.provider.Telephony.SMS_RECEIVED" />
			</intent-filter>
		</receiver>
	</application>
	<uses-sdk android:minSdkVersion="4" />
	<uses-permission
		android:name="android.permission.RECEIVE_SMS">
	</uses-permission>
</manifest>
